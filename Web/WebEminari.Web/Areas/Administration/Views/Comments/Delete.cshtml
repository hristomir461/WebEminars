@model AdminCommentDeleteModel
@{
    ViewData["Title"] = "Deleting a comment";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit</h6>
        </div>

        <div class="card-body">

            <h4>Коментар</h4>
            <hr />
            <div class="container">
                <div class="row">
                    <div class="offset-md-3 col-md-6 text-center">
                        <h2>Уеб семинар</h2>
                        <hr />
                        <div class="card">

                            <div class="card-body">
                                <h5 class="card-title">@Model.WebEminarTitle</h5>
                                <hr />
                                <p class="card-text">@Html.Raw(Model.WebEminarDescription)</p>

                                <div class="card-text">
                                    <p class="small text-muted">Category - @Model.WebEminarCategoryName</p>
                                    <p class="small text-muted">Created by - @Model.WebEminarAddedByUserUserName</p>
                                    <p class="small text-muted">Date created - <time datetime="@Model.WebEminarCreatedOn.ToString("O")">@Model.WebEminarCreatedOn.ToString("g")</time></p>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <h2>Коментар</h2>
                        <hr />

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <p>Created by: @Model.ApplicationUserUserName</p>
                            <p>Date created: <time datetime="@Model.CreatedOn.ToString("O")">@Model.CreatedOn.ToString("g")</time></p>
                            <p>Content: @Model.Content</p>
                            <input class="form-check-input" asp-for="IsDeleted" disabled />
                            @Html.DisplayNameFor(model => model.IsDeleted)
                        </div>

                        <hr />
                        <form asp-action="Delete">
                            <input asp-for="Id" type="hidden" />
                            <div class="form-group">
                                <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger float-right" />
                                <a asp-action="Index" class="btn btn-sm btn-outline-dark float-left"><i class="fas fa-arrow-left"></i> Back to all</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
            @section Scripts {
                <script src="https://cdn.polyfill.io/v2/polyfill.min.js?features=es6,Array.prototype.includes,CustomEvent,Object.entries,Object.values,URL"></script>
                <script src="https://unpkg.com/plyr@3"></script>
                <script>
                    const player = new Plyr('#player');
                    window.player = player;
                </script>
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
