@model IEnumerable<WebEminari.Data.Models.Category>

@{
    ViewData["Title"] = "Index Categories";
}


                <div class="container-fluid">


                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Категории</h6>
                        </div>
                        <div class="card-body">
                            <a style="margin-bottom: 20px" class="btn btn-primary" asp-action="Create">Create</a>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CreatedOn)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ModifiedOn)
                                            </th>
                                            <th>
                                                Buttons
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    <time datetime="@item.CreatedOn.ToString("O")">@item.CreatedOn.ToString("g")</time>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                                        <form asp-action="Delete" asp-route-id="@item.Id">
                                                            <button class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->