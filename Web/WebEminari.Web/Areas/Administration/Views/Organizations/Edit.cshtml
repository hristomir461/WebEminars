@model OrganizationEditModel
@{ ViewData["Title"] = "Edit an organization"; }

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit</h6>
        </div>

        <div class="card-body">

            <h4>Организация</h4>
            <hr />
            <div class="container">
                <div class="row">
                    <div class="offset-md-3 col-md-6 text-center">
                        <form asp-area="Administration" asp-controller="Organizations" asp-action="Edit" method="post">
                            <input type="hidden" asp-for="CreatorId" />

                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsDeleted" />
                                    @Html.DisplayNameFor(model => model.IsDeleted)
                                </label>
                            </div>

                            <input class="btn btn-sm btn-outline-success float-right" type="submit" name="submit" value="Submit" />
                            <a asp-action="Index" class="btn btn-sm btn-outline-dark float-left"><i class="fas fa-arrow-left"></i> Back to all</a>
                        </form>
                    </div>
                </div>
                </div>
</div>
</div>
</div>